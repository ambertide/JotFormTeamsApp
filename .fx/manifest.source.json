{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.9/MicrosoftTeams.schema.json",
  "manifestVersion": "1.9",
  "version": "1.0.0",
  "id": "{appid}",
  "packageName": "com.microsoft.teams.extension",
  "developer": {
    "name": "Teams App, Inc.",
    "websiteUrl": "{baseUrl}",
    "privacyUrl": "{baseUrl}/index.html#/privacy",
    "termsOfUseUrl": "{baseUrl}/index.html#/termsofuse"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "JotForm Polls",
    "full": "This field is not used"
  },
  "description": {
    "short": "An app where you can create polls.",
    "full": "Create and share easy to use and quick to fill polls using JotForm Polls for Microsoft Teams."
  },
  "accentColor": "#fa8900",
  "composeExtensions": [],
  "configurableTabs": [
    {
      "configurationUrl": "{baseUrl}/index.html#/config",
      "canUpdateConfiguration": true,
      "scopes": ["team", "groupchat"]
    }
  ],
  "staticTabs": [
    {
      "entityId": "index",
      "name": "My Polls",
      "contentUrl": "{baseUrl}/index.html#/tab",
      "websiteUrl": "{baseUrl}/index.html#/tab",
      "scopes": ["personal"]
    },
    {
      "entityId": "view",
      "name": "View Submissions",
      "contentUrl": "{baseUrl}/index.html#/results",
      "websiteUrl": "{baseUrl}/index.html#/results",
      "scopes": ["personal"]
    }
  ],
  "permissions": ["identity", "messageTeamMembers"],
  "validDomains": [],
  "webApplicationInfo": {
    "id": "{appClientId}",
    "resource": "{webApplicationInfoResource}"
  }
}
