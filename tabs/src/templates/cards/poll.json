{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.4",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "${form.title}"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "style": "Person",
              "url": "${user.avatarUrl}",
              "size": "Small"
            }
          ],
          "width": "auto"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "${user.name}",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "spacing": "None",
              "text": "Created ${form.created_at}",
              "isSubtle": true,
              "wrap": true
            }
          ],
          "width": "stretch"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "This user's poll is too complex to be opened within the chat, please click to the button to answer it in the browser.",
      "wrap": true
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "Answer the Poll",
      "url": "https://teams.microsoft.com/l/task/5182671a-cad1-4d8a-8fa3-61a8eea18c20?url=https%3A%2F%2Flocalhost%3A3000%2Findex.html%23%2Fpoll%2F${apiKey}%2F${form.id}%2F${form.title}&height=large&width=medium&title=${form.title}"
    }
  ]
}
